<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kasia.indexapp.Aktualne_Dane"
    android:orientation="vertical"
    android:gravity="center_vertical">


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Wskaźniki makroekonomiczne"
        android:id="@+id/makroButton"
        android:onClick="pokazMakro"
        android:textColor="#ffffff"
        android:background="@drawable/my_button" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Rynek pracy"
        android:id="@+id/pracaButton"
        android:layout_gravity="center_horizontal"
        android:onClick="pokazPraca"
        android:background="@drawable/my_button"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Wskaźniki finansowe i monetarne"
        android:id="@+id/finansoweButton"
        android:layout_gravity="center_horizontal"
        android:onClick="pokazFinanse"
        android:background="@drawable/my_button"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Kursy walut"
        android:id="@+id/kursyButton"
        android:layout_gravity="center_horizontal"
        android:onClick="pokazKursy"
        android:background="@drawable/my_button"
        android:textColor="#ffffff" />

</LinearLayout>
